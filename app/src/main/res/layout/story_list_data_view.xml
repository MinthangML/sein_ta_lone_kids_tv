<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_effect">

    <ImageView
        android:id="@+id/story_list_thumbnail"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:src="@drawable/dancing_kids"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/story_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:text="Title"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#666"
        android:lines="1"
        app:layout_constraintStart_toEndOf="@id/story_list_thumbnail"
        app:layout_constraintTop_toTopOf="@id/story_list_thumbnail"/>

    <TextView
        android:id="@+id/story_list_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="#999"
        app:layout_constraintTop_toBottomOf="@id/story_list_title"
        app:layout_constraintStart_toEndOf="@id/story_list_thumbnail"
        android:text="Summary"/>


