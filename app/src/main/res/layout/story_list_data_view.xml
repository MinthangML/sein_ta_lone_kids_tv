<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bg_eng_cata"
    android:padding="5dp">

    <ImageView
        android:id="@+id/story_list_thumbnail"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/icon1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/story_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#4ad090"
        app:layout_constraintStart_toEndOf="@id/story_list_thumbnail"
        app:layout_constraintTop_toTopOf="@id/story_list_thumbnail"/>

    <TextView
        android:id="@+id/story_list_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/story_list_title"
        app:layout_constraintStart_toEndOf="@id/story_list_thumbnail"
        android:text="Summary"/>

</androidx.constraintlayout.widget.ConstraintLayout>